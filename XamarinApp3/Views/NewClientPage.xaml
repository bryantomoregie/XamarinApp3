<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinApp3.Views.NewClientPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"
                     Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="clientName"
                   Placeholder="Name"/>
            <Entry x:Name="clientEmail"
                   Placeholder="Email"/>
            <Entry x:Name="clientPhone"
                   Placeholder="Phone"/>
            <Entry x:Name="clientAddress"
                   Placeholder="Address"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>